{
  "compilerOptions": {
    "target": "es2015",
    "module": "amd",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "emitBOM": true,
    "outFile": "built/out.js"
  },

  "include": [
    "src/**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}
